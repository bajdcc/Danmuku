<UserControl x:Class="DanmukuRPCServer.FullScreenDanmaku"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DanmukuRPCServer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Name="LayoutRoot">
        <TextBlock Name="Text" Text="TextBlock" TextBlock.FontSize="40" TextBlock.Foreground="#FFFFFFFF" TextBlock.FontWeight="Bold" FontFamily="方正隶变_GBK">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF000000" />
            </TextBlock.Effect>
        </TextBlock>
    </StackPanel>
</UserControl>
